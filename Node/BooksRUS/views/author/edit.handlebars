<h1> Edit</h1>
<form action="/authors/{{author._id}}?_method=PUT" method="put">
    <div>
        <label for="">Name</label>
    </div>
    <div>
        <input type="text" name="name" value="{{author.name}}">
    </div>
    <div>
        <label for="">Bio</label>
    </div>
    <div>
        <textarea name="bio" id="" cols="30" rows="10" value="{{author.bio}}"></textarea>
    </div>
    <div>
        <label for="">Gender</label>
    </div>
    <div>
       <select name="gender">
           <option value="{{author.gender}}" hidden selected> {{author.gender}}</option>
           <option value="male">Male</option>
           <option value="female">Female</option>
           <option value="non-binary">Non-Binary</option>
       </select>
    </div>

    <div>
        <input type="submit" value="Submit Form"/>
    </div>
</form>